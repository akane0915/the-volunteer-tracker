<h1>Update <%= @volunteer.name %>'s Details</h1>

<form action="/volunteers/<%=@volunteer.id%>" method="post">

  <input name="_method" type="hidden" value="patch">

  <div class="form-group">
     <label for="name">Update Volunteer Name:</label>
     <input name="name" class="form-control" type="text">
  </div>

  <div class="form-group">
     <label for="hours">Update Volunteer Hours:</label>
     <input name="hours" class="form-control" type="text">
  </div>

  <br>
  <button class="btn btn-default">Update Volunteer Details</button>
</form>
<hr>

<form action="/volunteers/<%=@volunteer.id%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button class="btn btn-default">Delete Volunteer</button>
</form>


<br>
